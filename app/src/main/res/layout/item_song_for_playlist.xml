<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_item_song_title"
        tools:text="Song Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/iv_delete_song"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_song_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_delete_song"
        app:layout_constraintTop_toBottomOf="@id/tv_item_song_title"
        tools:text = "Song Subtitle"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/iv_delete_song"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:foreground="@drawable/ic_baseline_delete_24"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_song_subtitle"
        android:foregroundTint="@color/deep_blue"/>


</androidx.constraintlayout.widget.ConstraintLayout>